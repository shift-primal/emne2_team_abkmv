{
    "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "ignore",
  "embeddedLanguageFormatting": "off",
  "plugins": ["prettier-plugin-embed"],
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "embeddedLanguageFormatting": "auto"
      }
    }
  ]
}
